{
    "version": "2.0.0",
    "problemMatcher": [
        {
            "name": "esbuild-watch",
            "owner": "esbuild",
            "pattern": {
                "regexp": "(.*):\\s*error:\\s*(.*)", 
                "file": 1,
                "message": 2
            },
            "background": {
                "activeOnStart": true,
                "beginsPattern": "watch started",
                "endsPattern": "build finished"
            }
        }
    ]
}